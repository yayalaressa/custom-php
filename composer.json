{
    "name": "yayalaressa/custom-php",
	"type": "project",
	"description": "Custom OOP PHP Native",
	"homepage": "https://yaya.my.id/",
	"keywords": ["php native, oop-principles, framework-php, oop-examples"],
	"authors": [
		{
			"name": "Yaya Laressa",
			"email": "hallo@yaya.my.id",
			"homepage": "https://yaya.my.id/",
			"role": "Developer"
		}
	],
    "config": {
		"vendor-dir": "system/vendor/",
		"optimize-autoloader": true,
		"platform": {
			"php": "7.3"
		}
	},
    "require": {
        "php": ">=7.3",
        "bramus/router": "~1.5",
        "twig/twig": "^3.0",
        "faapz/pdo": "^2.1",
        "bhaktaraz/php-rss-generator": "dev-master",
        "phpmailer/phpmailer": "^6.4",
        "rakit/validation": "^1.4",
        "michelf/php-markdown": "^1.9"
    },
    "autoload": {
		"files": [
			"system/core/session.php",
			"system/core/cache.php",
			"system/core/database.php",
			"system/core/functions.php",
			"system/core/security.php",
			"system/libraries/minifier.php",
			"system/admin/admin.php",
			"system/model/app.php",
			"vqmod/vqmod.php"
		]
	},
    "extra": {
        "branch-alias": {
            "dev-master": "v1.8-dev"
        }
    }
}
